# DessertPrint Environment Variables - Example Configuration
# Copy this file to .env and replace placeholder values with actual values

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_3D_PREVIEW=true
NEXT_PUBLIC_ENABLE_REVIEWS=true
NEXT_PUBLIC_ENABLE_BLOG=true

# Tax and Shipping
NEXT_PUBLIC_TAX_RATE=0.0975
NEXT_PUBLIC_FREE_SHIPPING_THRESHOLD=39

# Delivery Zones
NEXT_PUBLIC_GLENDALE_RADIUS=15
NEXT_PUBLIC_PANORAMA_RADIUS=20
NEXT_PUBLIC_GLENDALE_COORDINATES="-118.254947,34.146288"
NEXT_PUBLIC_PANORAMA_COORDINATES="-118.442619,34.227243"

# Supabase
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-role-key

# Mapbox
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=your-mapbox-public-token
MAPBOX_ACCESS_TOKEN=your-mapbox-access-token

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Stability AI
STABILITY_API_KEY=your-stability-api-key

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_API_URL=https://api-m.sandbox.paypal.com
PAYPAL_WEBHOOK_ID=your-paypal-webhook-id

# Email
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email-user
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@dessertprint.com
ADMIN_EMAIL=admin@dessertprint.com

# Admin
ADMIN_SETUP_KEY=your-admin-setup-key

# MailerLite
MAILERLITE_API_KEY=your-mailerlite-api-key